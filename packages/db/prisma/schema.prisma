// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      ItemStatus @default(DRAFT)
  priority    Priority   @default(MEDIUM)
  tags        String[]
  metadata    Json?
  tenantId    String?
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("items")
  @@index([tenantId])
  @@index([status])
  @@index([createdAt])
}

enum ItemStatus {
  DRAFT
  ACTIVE
  ARCHIVED
  DELETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
} 